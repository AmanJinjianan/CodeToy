<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
    <!-- 首先定义标题栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EBEBEB">
        <TextView
            android:text="标题栏"
            android:id="@+id/text_title"
            android:textSize="21sp"
            android:textColor="#000000"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:drawablePadding="6dp"
            android:background="@drawable/btn_right2"
            android:rotation="180"
            android:ellipsize="end"
            android:gravity="center"
            android:onClick="backtomain"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:visibility="visible" />
        <Button
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="6dp"
            android:background="@drawable/pointing"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_gr_1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#6495ED"
            android:gravity="center"
            android:text="TextView" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Chronometer
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="15dp"
            android:background="@drawable/shape2"
            android:gravity="center"
            android:format="%s"
            android:id="@+id/timer"/>

        <Button
            android:id="@+id/btn_gr_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="#CD950C"
            android:text="已结束" />
    </LinearLayout>
    <View android:layout_width="fill_parent" android:background="#000000" android:layout_height="1px"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_gr_2"
            android:layout_width="match_parent"

            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#6495ED"
            android:gravity="center"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:background="#CDC9C9"
                android:text="姓名" />
            <View android:layout_width="1px" android:background="#000000" android:layout_height="fill_parent"></View>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#CDC9C9"
                android:text="性别" />
            <View android:layout_width="1px" android:background="#000000" android:layout_height="fill_parent"></View>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:background="#CDC9C9"
                android:text="成功个数" />
            <View android:layout_width="1px" android:background="#000000" android:layout_height="fill_parent"></View>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:background="#CDC9C9"
                android:text="失败个数" />
            <View android:layout_width="1px" android:background="#000000" android:layout_height="fill_parent"></View>
            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:background="#CDC9C9"
                android:text="分值" />
            <View android:layout_width="1px" android:background="#000000" android:layout_height="fill_parent"></View>
            <TextView
                android:id="@+id/textView99"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#CDC9C9" />
        </LinearLayout>


    </LinearLayout>
    <ListView
        android:id="@+id/lv_gr1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFF0F5">

        <Button
            android:id="@+id/btn_gr_selectconfirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="确认" />

        <TextView
            android:id="@+id/tv_gr_selectedcount"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="已经选择学生 0 人" />
    </RelativeLayout>
</LinearLayout>
