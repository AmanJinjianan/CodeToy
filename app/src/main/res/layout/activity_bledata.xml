<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_receiver"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:text="接收(扫描)广播："></TextView>

    <LinearLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal">
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="系统值："></TextView>
    <EditText
        android:layout_weight="5"
        android:id="@+id/et_systemid"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:text="02 01 05 03 19 C1 03 07 16(不可编辑)" />
</LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="数据值："></TextView>
        <TextView
            android:id="@+id/tv_receive_data"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="xxxxxxxxxxxxxxxxxxxxxxx"></TextView>
        <TextView
            android:id="@+id/tv_times22"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/shape2"
            android:text="收到0次"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_reveive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="开始接收(扫描)广播"></Button>

        <Button
            android:id="@+id/btn_stop_reveive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="断开连接"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_weight="1"
                android:id="@+id/btn_reveive11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/btn_left"
                android:text="button1"></Button>
            <Button
                android:layout_weight="1"
                android:id="@+id/btn_stop_reveive111"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="button2"></Button>
            <Button
                android:layout_weight="1"
                android:id="@+id/btn_reveive11444"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="button1"></Button>
            <Button
                android:layout_weight="1"
                android:id="@+id/btn_stop_reveive111333"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="button2"></Button>
        </LinearLayout>
        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:enabled="false"
                android:text="Up( 前 )" />

            <Button
                android:id="@+id/btn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btn_right"
                android:layout_alignParentStart="true"
                android:enabled="false"
                android:text="LEFT（ 左 ）" />

            <Button
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/btn_down"
                android:enabled="false"
                android:text="RIGHT（ 右 ）" />

            <Button
                android:id="@+id/btn_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/btn_up"
                android:enabled="false"
                android:text="down（ 后 ）" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:text="发送广播："></TextView>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="系统值："></TextView>
        <EditText
            android:layout_weight="5"
            android:id="@+id/et_systemid2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:enabled="false"
            android:hint="02 01 1A 11 07 07 C2 EE 49 6D AA" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="数据值："></TextView>
        <EditText
            android:layout_weight="5"
            android:id="@+id/et_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:focusable="false"
            android:maxLength="16"
            android:text="19FF100100000000" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_id"
            android:gravity="center_vertical"
            android:background="@color/colorAccent"
            android:text="检验值"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_once"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:enabled="false"
            android:text="/停"></Button>
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:text="持续广播"></Button>
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:enabled="false"
            android:text="停止持续广播"></Button>
    </LinearLayout>

    <!--<TextView
        android:id="@+id/tx1"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:text="保留区域："></TextView>-->
    <LinearLayout
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp">

        <ScrollView
            android:id="@+id/SCROLLER_ID"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:background="@drawable/border"
            android:fillViewport="true">

            <TextView
                android:id="@+id/TEXT_STATUS_ID"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"/>

        </ScrollView>

    </LinearLayout>
</LinearLayout>
