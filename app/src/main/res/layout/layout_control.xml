<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_col">

    <ImageButton
        android:id="@+id/ib_control_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_icon_back" />
    <LinearLayout
        android:id="@+id/ll_control_center"
        android:layout_width="1920px"
        android:layout_height="1080px"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_item_col">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/btn_left_control"
                android:layout_width="193px"
                android:layout_height="247px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="300px"
                android:layout_marginStart="190px"
                android:background="@drawable/btn_left" />

            <Button
                android:id="@+id/btn_right_control"
                android:layout_width="193px"
                android:layout_height="247px"
                android:layout_alignBottom="@+id/btn_left_control"
                android:layout_marginStart="38px"
                android:layout_toEndOf="@+id/btn_left_control"
                android:background="@drawable/btn_right" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1">

            <Button
                android:id="@+id/button3"
                android:layout_width="270px"
                android:layout_height="121px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="505px"
                android:background="@drawable/btn_on" />


            <Button
                android:id="@+id/button7"
                android:layout_width="162px"
                android:layout_height="81px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/pic_top_ball"
                android:text=" " />

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="216px"
                android:layout_height="95px"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button3"
                android:layout_marginStart="23dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/btn_select"
                />

            <ImageButton
                android:id="@+id/btn_more_control"
                android:layout_width="216px"
                android:layout_height="95px"
                android:layout_alignTop="@+id/imageButton10"
                android:layout_marginStart="76px"
                android:layout_toEndOf="@+id/imageButton10"
                android:background="@drawable/btn_start"
                 />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_weight="1">

            <SeekBar
                android:id="@+id/seekBar3"
                android:layout_width="540px"
                android:layout_height="270px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="292px"
                android:layout_marginLeft="-25px"
                android:paddingEnd="54px"
                android:paddingStart="54px"
                android:progress="50"
                android:rotation="90"
                android:thumb="@drawable/icon_ball_r" />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>

