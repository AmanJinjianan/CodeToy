<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#12b961">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/ib_code_car"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/btn_grahome_car" />

        <ImageView
            android:layout_width="53dp"
            android:layout_height="18dp"
            android:layout_below="@+id/ib_code_car"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@drawable/pic_gra_zi1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/ib_code_robot"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/btn_grahome_robot" />

        <ImageView
            android:layout_width="53dp"
            android:layout_height="18dp"
            android:layout_below="@+id/ib_code_robot"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@drawable/pic_gra_zi2" />
    </RelativeLayout>.

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/ib_code_ai"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/btn_grahome_ai" />

        <ImageView
            android:layout_width="53dp"
            android:layout_height="18dp"
            android:layout_below="@+id/ib_code_ai"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@drawable/pic_gra_zi3" />
    </RelativeLayout>
</LinearLayout>
