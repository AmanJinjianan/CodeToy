<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_col">

    <ImageButton
        android:id="@+id/ib_control_pro_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_icon_back" />
    <LinearLayout
        android:id="@+id/ll_control_pro_center"
        android:layout_width="1920px"
        android:layout_height="1080px"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_item_pro">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <RelativeLayout
                android:layout_width="450px"
                android:layout_height="450px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="194px"
                android:layout_marginRight="14px">

                <com.qixiang.codetoy.MyView.MyRockerView
                    android:id="@+id/act_myrockview"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="-42dp"
                    android:layout_marginTop="-44dp" />
                <!--<ImageButton-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentStart="true"-->
                    <!--android:layout_alignParentTop="true"-->
                    <!--android:background="@drawable/eight_control_center" />-->
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_pro"
                android:layout_width="162px"
                android:layout_height="81px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/pic_top_ball"
                android:text=" " />
            <Button
                android:id="@+id/btn_right_down"
                android:layout_width="193px"
                android:layout_height="247px"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="37dp"
                android:layout_marginBottom="68dp"
                android:layout_toEndOf="@+id/btn_left_up"
                android:background="@drawable/btn_right"
                android:rotation="45" />

            <Button
                android:id="@+id/btn_left_down"
                android:layout_width="193px"
                android:layout_height="247px"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="68dp"
                android:background="@drawable/btn_left"
                android:rotation="-45" />

            <Button
                android:id="@+id/btn_left_up"
                android:layout_width="193px"
                android:layout_height="247px"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="26dp"
                android:layout_marginBottom="178dp"
                android:background="@drawable/btn_left"
                android:rotation="45" />

            <Button
                android:id="@+id/btn_right_up"
                android:layout_width="193px"
                android:layout_height="247px"
                android:layout_alignBottom="@+id/btn_left_up"
                android:layout_marginStart="37dp"
                android:layout_marginBottom="-3dp"
                android:layout_toEndOf="@+id/btn_left_up"
                android:background="@drawable/btn_right"
                android:rotation="-45" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/btn_left_pro"
                android:layout_width="193px"
                android:layout_height="247px"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="11dp"
                android:layout_marginBottom="114dp"
                android:background="@drawable/btn_left" />

            <Button
                android:id="@+id/btn_right_pro"
                android:layout_width="193px"
                android:layout_height="247px"
                android:layout_alignBottom="@+id/btn_left_pro"
                android:layout_marginStart="38px"
                android:layout_toEndOf="@+id/btn_left_pro"
                android:background="@drawable/btn_right" />


        </RelativeLayout>

    </LinearLayout>

</FrameLayout>

