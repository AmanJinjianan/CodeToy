<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg_game">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/ib_pk_back"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_back_b" />

            <ImageButton
                android:id="@+id/ibtn_control_left"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="78dp"
                android:background="@drawable/btn_game_left" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_above="@+id/ibtn_control_left"
                android:layout_toEndOf="@+id/ibtn_control_left"
                android:background="@drawable/icon_bottle" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/imageButton2"
                android:layout_toEndOf="@+id/imageButton2"
                android:background="@drawable/btn_game_right" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/imageView"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/imageButton4"
                android:background="@drawable/icon_fast_l" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_below="@+id/imageButton3"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/ibtn_control_left"
                android:background="@drawable/btn_addspeed" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/imageButton3"
                android:layout_toEndOf="@+id/imageButton4"
                app:srcCompat="@drawable/icon_fast_r" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


     
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_weight="1">


            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_alignEnd="@+id/imageButton6"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="-1dp"
                android:layout_marginBottom="29dp"
                android:background="@drawable/btn_game_start" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_above="@+id/imageButton5"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="29dp"
                android:background="@drawable/btn_game_send" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_above="@+id/imageButton5"
                android:layout_toStartOf="@+id/imageButton6"
                android:background="@drawable/icon_bullet" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_below="@+id/imageButton7"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/imageButton5"
                android:background="@drawable/icon_spanner" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="63dp"
                android:layout_height="53dp"
                android:layout_alignBottom="@+id/imageButton5"
                android:layout_marginEnd="88dp"
                android:layout_marginBottom="-13dp"
                android:layout_toStartOf="@+id/imageButton5"
                android:background="@drawable/btn_game_skid" />
        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="330dp"
            android:layout_height="140dp"
            android:background="@drawable/pk_title_center" />
    </RelativeLayout>
</FrameLayout>

